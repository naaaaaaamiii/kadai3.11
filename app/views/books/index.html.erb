<body>
   <%= flash[:notice] %>
   <h3>
     <% if @book_new.errors.any? %>
       <%= @book_new.errors.count %>error!!!!!!!!!!!
         <ul>
           <% @book_new.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
          </ul>
      <% end %>
     </h3>
     <main>
       <div class="container px-5 px-sm-0">
        <div class="row">
         <div class="col-md-3">
            <%= render 'users/user', user: @user %>
              <div class="row">
                <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
               　　 <i class="fas fa-user-cog"></i>
              　 <% end %>
              </div>

              <%= render'books/book', book_new: @book_new %>
         </div>

              <!--ここから右側　-->
              <div class="col-md-8 offset-md-1">
               <h2>Books</h2>
                <table class="table table-hover table-inverse">
                 <thead>
                  <tr>
                   <th></th>
                   <th>Title</th>
                   <th>Option</th>
                   <th colspan="3"></th>
                  </tr>
                  <tbody>
                   <% @books.each do |book| %>
                   <tr>
                    <th><%=link_to user_path(book.user.id) do %>
                          <%= image_tag @user.get_profile_image(80,80) %>
                        <% end %>
                    </th>
                    <th><%=link_to book.title, book_path(book) %></th>
                    <th> <%= book.body %> </th>
                    <th><%= render'favorites/favorite', book: book %></th>
                   </tr>
                   <% end %>
                  </tbody>
                 </thead>
                </table>
               </tale>
              </div>

         </div>
        </div>
       </div>



     </main>
</body>